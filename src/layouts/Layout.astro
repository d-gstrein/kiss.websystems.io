---
import '../styles/main.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  noindex?: boolean;
}

const { title, description, canonical, noindex = false } = Astro.props;
const siteUrl = 'https://kiss.websystems.io';
const currentPath = Astro.url.pathname;
const canonicalUrl = canonical || `${siteUrl}${currentPath}`;
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalUrl}>
  {noindex && <meta name="robots" content="noindex, nofollow">}
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600;700&family=IBM+Plex+Sans:wght@400;500;600&display=swap" rel="stylesheet">
  
  <!-- Styles werden via import im Frontmatter geladen -->
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:type" content="website">
  <meta property="og:locale" content="de_DE">
</head>
<body>
  <header class="header">
    <div class="container header__inner">
      <a href="/" class="header__logo">KISS.Shop</a>
      <nav class="nav">
        <a href="/#vorteile">Vorteile</a>
        <a href="/#pakete">Pakete</a>
        <a href="/vergleich/">Vergleich</a>
        <a href="/#kontakt">Kontakt</a>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="container footer__inner">
      <div class="footer__text">
        <p><strong>KISS.Shop</strong> – Einfache Shopsoftware für kleine Betriebe</p>
        <p>Ein Produkt von <a href="https://websystems.io" target="_blank" rel="noopener">websystems.io</a></p>
      </div>
      <div class="footer__links">
        <a href="/impressum/">Impressum</a>
        <a href="/datenschutz/">Datenschutz</a>
      </div>
    </div>
  </footer>
</body>
</html>
