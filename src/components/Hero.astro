---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
}

const { label, title, subtitle } = Astro.props;
---

<section class="hero">
  <div class="container">
    {label && <p class="hero__label">{label}</p>}
    <h1>{title}</h1>
    {subtitle && <p class="hero__subtitle">{subtitle}</p>}
    <slot />
  </div>
</section>
