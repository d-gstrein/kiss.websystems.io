---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  showCTA?: boolean;
}

const { label, title, subtitle, showCTA = false } = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-gray-50 to-white">
  <!-- Subtle grid pattern background -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#8882_1px,transparent_1px),linear-gradient(to_bottom,#8882_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 py-16 md:py-24">
    <div class="max-w-3xl">
      {label && (
        <span class="inline-flex items-center px-3 py-1 mb-6 text-xs font-mono font-semibold uppercase tracking-wider text-brand bg-brand-light rounded-full">
          {label}
        </span>
      )}

      <h1 class="font-mono text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight tracking-tight">
        {title}
      </h1>

      {subtitle && (
        <p class="mt-6 text-lg md:text-xl text-gray-600 leading-relaxed max-w-2xl">
          {subtitle}
        </p>
      )}

      {showCTA && (
        <div class="mt-10 flex flex-col sm:flex-row gap-4">
          <a href="mailto:david@websystems.io?subject=KISS.Shop%20Anfrage"
             class="inline-flex items-center justify-center px-8 py-4 bg-brand text-white font-mono font-semibold hover:bg-brand-dark transition-colors">
            Jetzt anfragen
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="#vorteile"
             class="inline-flex items-center justify-center px-8 py-4 border-2 border-gray-900 text-gray-900 font-mono font-semibold hover:bg-gray-900 hover:text-white transition-colors">
            Mehr erfahren
          </a>
        </div>
      )}

      <slot />
    </div>
  </div>

  <!-- Decorative element -->
  <div class="absolute right-0 top-1/2 -translate-y-1/2 w-1/3 h-96 bg-gradient-to-l from-brand/5 to-transparent hidden lg:block"></div>
</section>
