---
interface Props {
  title: string;
  text?: string;
  buttonText: string;
  buttonHref: string;
}

const { title, text, buttonText, buttonHref } = Astro.props;
---

<section class="cta-section py-16 md:py-20 bg-gray-900" id="kontakt">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-brand to-brand-dark p-8 md:p-16 text-center">
      <!-- Decorative elements -->
      <div class="absolute top-0 left-0 w-40 h-40 bg-white/10 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-60 h-60 bg-white/10 rounded-full translate-x-1/3 translate-y-1/3"></div>

      <div class="relative">
        <h2 class="font-mono text-3xl md:text-4xl font-bold text-white mb-4">{title}</h2>
        {text && <p class="text-white/90 text-lg mb-8 max-w-xl mx-auto">{text}</p>}
        <a href={buttonHref}
           class="inline-flex items-center px-8 py-4 bg-white text-brand font-mono font-bold hover:bg-gray-100 transition-colors shadow-lg">
          {buttonText}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
